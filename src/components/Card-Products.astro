---
import productosData from '../data/products.json';
---

{productosData.products.map((producto) => (
  <div
    class="bg-[#383A3D] w-[350px] h-[457px] mx-2.5 flex-shrink-0 snap-center  rounded-3xl shadow-2xl  md:snap-center md:flex-shrink md:static"
    style="@media (max-width: 780px) { width: 350px; }"
  >
    <div class="w-full h-[279px] overflow-hidden">
      <img
        src={`../src/assets/${producto.image}`}
        alt={producto.name}
        class="w-full h-80 object-cover rounded-t-[24px] object-[50%_20%]"
      />
    </div>
    <div class="w-full h-[178px] rounded-br-[24px] rounded-bl-[24px] p-4 flex flex-col gap-2">
      <h2 class="text-lg font-semibold">{producto.name}</h2>
      <h3 class="text-base text-white/90">{producto.name}</h3>
      <p class="text-sm text-white/60">{producto.cuotas}</p>
      <button
        class="mt-2 self-start px-4 py-2 bg-white text-black rounded-full text-sm font-semibold hover:bg-gray-200 transition"
      >
        comprar
      </button>
    </div>
  </div>
))}



